<!-- 部分テンプレート -->
<%= flash[:notice] %>
<div class="container px-sm-5">
  <div class="row">
    <%= render 'list', user: @user_temp , book: @book_temp %>
    <div class="book-list col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table  table-hover">
      <% @book_posted.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user.id) do %>
                <%= image_tag(book.user.get_profile_image) %>
            <% end %>
            <!-- 画像にリンクを埋め込みたいのでdo~end 画像が80*80なので後で修正 -->
          </td>
          <td>
            <%= book.title %>
          </td>
          <td>
            <%= book.body %>
          </td>
          <%# current_user時のみ表示 %>
          <% if book.user_id == current_user.id %>
            <td>
              <%= link_to "edit", edit_book_path(book.id) %>
            </td>
            <td>
              <%= link_to "delete", book_path(book.id), method: :delete, "data-confirm" => "OK?" %>
            </td>
          <% end %>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
