<!-- 部分テンプレート -->
<%= render 'list', user: @user , book: @book %>
<div class="book-list">
  <h1>Books</h1>
  <table>
   <tr>
    <th>画像</th>
    <th>Title</th>
    <th>Opinion</th>
    <th>編集</th>
    <th>削除</th>
   </tr>
   <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to book.user.name, user_path(book.user.id) %>
      </td>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to "edit", edit_book_path(book.id) %>
      </td>
      <td>
        <%= link_to "delete", book_path(book.id), method: :delete, "data-confirm" => "OK?" %>
      </td>
    </tr>
   <% end %>
  </table>
</div>