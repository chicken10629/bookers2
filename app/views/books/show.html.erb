<%= flash[:notice] %>
<div class="container px-sm-5">
  <div class="row">
  <!-- 部分テンプレート -->
    <%= render './users/list', user: @user_temp , book: @book_temp %>
    <div class="book-list col-md-8 offset-md-1 mt-3">
      <h1>Book detail</h1>
      <table class="table table-hover">
        <tr>
          <td>
            <%= link_to user_path(@book_posted.user.id) do %>
              <div class="user-profile">
                <%= image_tag(@book_posted.user.get_profile_image) %>
                <p><%= @book_posted.user.name %></p>
              </div>
            <% end %>
          </td>
          <td>
            <%= @book_posted.title %>
          </td>
          <td>
            <%= @book_posted.body %>
          </td>
          <% if @book_posted.user_id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@book_posted.id), class: "btn btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book_posted.id), method: :delete, class:"btn btn-danger", "data-confirm" => "本当に消しますか?" %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
  