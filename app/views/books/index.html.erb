
<div class="container px-sm-5">
  <div class="row">
    <% if @book.errors.any? %>
    <div class="col col-sm-12 col-md-8 mt-3 error_messages">
      <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %> 
  </div>
  <div class="row">
  <!-- 部分テンプレート -->
    <%= render './users/list', user: @user_temp , book: @book_temp %>
    <div class="book-list col-md-8 offset-md-1 mt-3">
      <h1>Books</h1>
      <table class="table table-hover">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      <% @book_all.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user.id) do %>
              <%= image_tag book.user.get_profile_image %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>