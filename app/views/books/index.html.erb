<!-- 部分テンプレート -->
<%= render './users/list', user: @user , book: @book %>

<h1>Books</h1>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
<% @books.each do |book| %>
  <tr>
    <td><%= link_to book.user.name, user_path(book.user.id) %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
<% end %>
</table>