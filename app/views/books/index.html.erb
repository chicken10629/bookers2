
<div class="container px-sm-5">
  <div class="row">
  <!-- 部分テンプレート -->
    <%= render './users/list', user: @user_temp , book: @book_temp %>
    <div class="book-list col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-hover">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      <% @book_all.each do |book| %>
        <tr>
          <td><%= link_to book.user.name, user_path(book.user.id) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>