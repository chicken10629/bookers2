
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-6 mt-3 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>
      <%= form_with model: @book_posted do |f| %>
        <label for="inputTitle">Title</label>
        <p><%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル", class: "w-100" %></p>
        <label for="inputBody">Opinion</label>
        <p><%= f.text_area :body, id:"inputBody", placeholder:"本文", class: "w-100" %></p>
        <p><%= f.submit "Update Book", class: "btn btn-success" %></p>
      <% end %>
      <%= link_to "Show", book_path(@book_posted.id) %> | <%= link_to "Back", books_path %>
    </div>
  </div>
</div>